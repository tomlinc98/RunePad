<GuiXml>
	<Controls>
		<TopLevelControl name="RunePadWindow"  mouseEnabled="true" movable="true" clampedToScreen="true" hidden="true">
			<Dimensions x="500" y="500" />
			<Anchor point="TOPLEFT" relativeTo="GuiRoot" relativePoint="TOPLEFT"/>
			<Controls>
				<Backdrop name="$(parent)Backdrop" centerColor="000000" layer="0" level="0" edgeColor="000000" alpha="0.6">
					<Dimensions x="500" y="500" />
					<Anchor point="TOPLEFT" relativeTo="$(parent)" />
					<Edge edgeSize="1" />
				</Backdrop>
				<Button name="RunePadTab1" inherits="ZO_DefaultButton">
					<Dimensions x="100" y="30" />
					<Anchor point="TOPLEFT" relativeTo="$(parent)" offsetX="10" offsetY="10" />
					<Controls>
						<Label name="$(parent)Label" font="ZoFontGameBold" text="Tab 1" color="FFFFFF">
							<Anchor point="CENTER" relativeTo="$(parent)" relativePoint="CENTER" />
						</Label>
					</Controls>
				</Button>
				<Button name="RunePadTab2" inherits="ZO_DefaultButton">
					<Dimensions x="100" y="30" />
					<Anchor point="TOPLEFT" relativeTo="RunePadTab1" relativePoint="TOPRIGHT" offsetX="10" offsetY="0" />
					<Controls>
						<Label name="$(parent)Label" font="ZoFontGameBold" text="Tab 2" color="FFFFFF">
							<Anchor point="CENTER" relativeTo="$(parent)" relativePoint="CENTER" />
						</Label>
					</Controls>
				</Button>
				<EditBox name="RunePadWindowTab1Box" inherits="ZO_DefaultEditForBackdrop">
					<Dimensions x="480" y="450" />
					<Anchor point="TOPLEFT" relativeTo="RunePadTab1" relativePoint="BOTTOMLEFT" offsetX="0" offsetY="10" />
				</EditBox>
				<EditBox name="RunePadWindowTab2Box" inherits="ZO_DefaultEditForBackdrop">
					<Dimensions x="480" y="450" />
					<Anchor point="TOPLEFT" relativeTo="RunePadTab1" relativePoint="BOTTOMLEFT" offsetX="0" offsetY="10" />
				</EditBox>
			</Controls>
		</TopLevelControl>
	</Controls>
</GuiXml>
